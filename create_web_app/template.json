{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": { 
            "type":"string",
            "defaultValue":"eastus"
        },
        "servers_egw_name": {
            "defaultValue": "sjh-egw",
            "type": "String"
        },
        "sites_webapp_emailgateway_name": {
            "defaultValue": "webapp-emailgateway",
            "type": "String"
        },
        "serverfarms_ASP_RGEmailgateway_name": {
            "defaultValue": "ASP-RGEmailgateway",
            "type": "String"
        },
        "sites_webapi_emailgateway_sender_name": {
            "defaultValue": "webapi-emailgateway-sender",
            "type": "String"
        },
        "sites_webapi_emailgateway_receiver_name": {
            "defaultValue": "webapi-emailgateway-receiver",
            "type": "String"
        },
        "storageAccounts_stemailgateway001_name": {
            "defaultValue": "sjhstemailgateway001",
            "type": "String"
        },
        "apiVersion": {
            "type": "string",
            "defaultValue": "2023-02-01-preview",
            "metadata": {
                "description": "The version of the api for sql server"
            }
        }
    },
    "variables": {},
    "resources": [
        
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "[parameters('apiVersion')]",
            "name": "[parameters('servers_egw_name')]",
            "location": "[parameters('location')]",
            "tags": {
                "AppName": "",
                "CostCenter": "",
                "Customer": "",
                "Environment": "",
                "Requestor": ""
            },
            "kind": "v12.0",
            "properties": {
                "administratorLogin": "[concat(parameters('servers_egw_name'), 'admin')]",
                "administratorLoginPassword": "myAdminP123!",
                "version": "12.0",
                "minimalTlsVersion": "1.2",
                "publicNetworkAccess": "Enabled",
                "restrictOutboundNetworkAccess": "Disabled"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-01-01",
            "name": "[parameters('storageAccounts_stemailgateway001_name')]",
            "location": "[parameters('location')]",
            "tags": {
                "AppName": "",
                "CostCenter": "",
                "Customer": "",
                "Environment": "",
                "Requestor": ""
            },
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "publicNetworkAccess": "Enabled",
                "allowCrossTenantReplication": true,
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": true,
                "allowSharedKeyAccess": true,
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "requireInfrastructureEncryption": false,
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2022-09-01",
            "name": "[parameters('serverfarms_ASP_RGEmailgateway_name')]",
            "location": "[parameters('location')]",
            "tags": {
                "AppName": "",
                "CostCenter": "",
                "Customer": "",
                "Environment": "",
                "Requestor": ""
            },
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "size": "S1",
                "family": "S",
                "capacity": 1
            },
            "kind": "app",
            "properties": {
                "perSiteScaling": false,
                "elasticScaleEnabled": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0,
                "zoneRedundant": false
            }
        },
        
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "[parameters('apiVersion')]",
            "name": "[concat(parameters('servers_egw_name'), '/', parameters('servers_egw_name'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('servers_egw_name'))]"
            ],
            "tags": {
                "AppName": "",
                "CostCenter": "",
                "Customer": "",

                "Environment": "",
                "Requestor": ""
            },
            "sku": {
                "name": "Basic",
                "tier": "Basic",
                "capacity": 5
            },
            "kind": "v12.0,user",
            "properties": {
                "collation": "SQL_Latin1_General_CP1_CI_AS",
                "maxSizeBytes": 2147483648,
                "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
                "zoneRedundant": false,
                "readScale": "Disabled",
                "requestedBackupStorageRedundancy": "Geo",
                
                "isLedgerOn": false,
                "availabilityZone": "NoPreference"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-09-01",
            "name": "[parameters('sites_webapi_emailgateway_receiver_name')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_ASP_RGEmailgateway_name'))]"
            ],
            "tags": {
                "AppName": "",
                "CostCenter": "",
                "Customer": "",
                "Environment": "",
                "Requestor": ""
            },
            "kind": "app",
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('sites_webapi_emailgateway_receiver_name'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(parameters('sites_webapi_emailgateway_receiver_name'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_ASP_RGEmailgateway_name'))]",
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "vnetRouteAllEnabled": false,
                "vnetImagePullEnabled": false,
                "vnetContentShareEnabled": false,
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "acrUseManagedIdentityCreds": false,
                    "alwaysOn": true,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 0
                },
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": true,
                "clientCertEnabled": false,
                "clientCertMode": "Required",
                "hostNamesDisabled": false,
                
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": true,
                "redundancyMode": "None",
                "publicNetworkAccess": "Enabled",
                "storageAccountRequired": false,
                "keyVaultReferenceIdentity": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-09-01",
            "name": "[parameters('sites_webapi_emailgateway_sender_name')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_ASP_RGEmailgateway_name'))]"
            ],
            "tags": {
                "AppName": "",
                "CostCenter": "",
                "Customer": "",
                "Environment": "",
                "Requestor": ""
            },
            "kind": "app",
            "properties": {
                "enabled": true,
                
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_ASP_RGEmailgateway_name'))]",
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "vnetRouteAllEnabled": false,
                "vnetImagePullEnabled": false,
                "vnetContentShareEnabled": false,
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "acrUseManagedIdentityCreds": false,
                    "alwaysOn": true,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 0
                },
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": true,
                "clientCertEnabled": false,
                "clientCertMode": "Required",
                "hostNamesDisabled": false,
                
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": true,
                "redundancyMode": "None",
                "publicNetworkAccess": "Enabled",
                "storageAccountRequired": false,
                "keyVaultReferenceIdentity": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-09-01",
            "name": "[parameters('sites_webapp_emailgateway_name')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_ASP_RGEmailgateway_name'))]"
            ],
            "tags": {
                "AppName": "",
                "CostCenter": "",
                "Customer": "",
                "Environment": "",
                "Requestor": ""
            },
            "kind": "app",
            "properties": {
                "enabled": true,
                
                
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_ASP_RGEmailgateway_name'))]",
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "vnetRouteAllEnabled": true,
                "vnetImagePullEnabled": false,
                "vnetContentShareEnabled": false,
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "acrUseManagedIdentityCreds": false,
                    "alwaysOn": true,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 0
                },
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": true,
                "clientCertEnabled": false,
                "clientCertMode": "Required",
                "hostNamesDisabled": false,
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": true,
                "redundancyMode": "None",
                "publicNetworkAccess": "Enabled",
                "storageAccountRequired": false,
                
                "keyVaultReferenceIdentity": "SystemAssigned"
            }
        }        
    ]
} 